<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">


    <ImageView
        android:id="@+id/instalogo"
        android:layout_width="127dp"
        android:layout_height="127dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/instagramlogosplash"></ImageView>

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_below="@+id/instalogo"
        android:hint="@string/email"
        android:textColorHint="@color/grey"
        android:textColor="@color/darkBlack"
        android:paddingHorizontal="@dimen/padding_horizontal"
        android:textSize="@dimen/text_size"
        android:layout_marginHorizontal="@dimen/margin_horizon"
        android:layout_marginTop="@dimen/logo_text_size"
        android:paddingStart="@dimen/margin_horizon"
        android:background="@drawable/edit_bg"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_height"
        android:layout_below="@id/email_login"
        android:layout_marginHorizontal="@dimen/margin_horizon"
        android:layout_marginTop="@dimen/margin_bottom_login"
        android:background="@drawable/edit_bg"
        android:drawableEnd="@drawable/eye"
        android:hint="Password"
        android:inputType="text|textWebPassword"
        android:paddingStart="@dimen/margin_left_facebook"
        android:paddingEnd="@dimen/margin_left_facebook"
        android:textColor="@color/darkBlack"
        android:textColorHint="@color/grey"
        android:textSize="@dimen/text_size"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifreni mi unuttun?"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/password_login"
        android:textSize="@dimen/text_size"
        android:textColor="@color/white"
        android:layout_marginEnd="@dimen/padding_horizontal"
        android:layout_marginTop="@dimen/margin_horizon"/>


    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_pass"
        android:layout_marginHorizontal="@dimen/margin_horizon"
        android:layout_marginTop="@dimen/card_radius"
        android:backgroundTint="@color/blue"
        android:text="Giriş Yap"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/card_radius" />



    <TextView
        android:id="@+id/donHave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabın yok mu? Kaydol."
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_bottom_login"
        android:textSize="@dimen/text_size_login"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_above="@id/donHave"
        android:layout_marginBottom="@dimen/margin_horizon"
        android:background="@color/white"
        android:layout_marginTop="@dimen/logo_margin_top"/>


</RelativeLayout>